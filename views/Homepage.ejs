    <body>
        <div style="margin:20px 43%;">
            <img style="height:250px;" src="https://cdn0.iconfinder.com/data/icons/essentials-solid/100/Contact_Book-512.png">
        </div>
        <div style='max-width: 50%;margin:20px 25% 0 25%;padding:10px;'>
            <form >
                <pre><input style="display:inline-block;max-width: 90%;" class="form-control" type="text" placeholder="Search" name="search" id="search" onkeyup="myfunc()"><button  style="display:inline-block;border: none;height:40px;" type="submit"><img src="https://img.icons8.com/material-sharp/24/000000/search.png"/></button></pre>
                
            </form>
            <ul>
                <% User.forEach(function(ele){%>
                    <a href="/details/<%=ele._id%>"><li><%= ele.Name %> </li></a>
                <%})%>
            </ul>
        </div>
        <a href='/allView' type=Button class="btn btn-success" style="margin-left:45%;">View All Contacts</a>
       
        <a href='/add' title="Add Contact"><button id="myBtn" style="bottom: 10px;right:10px;"><img src="https://img.icons8.com/ios-filled/50/000000/plus.png"/></button></a>
        <script>
            function myfunc(){
                var input, filter, a, i,li, txtValue;
                input = document.getElementById("search");
                filter = input.value.toUpperCase();
                li = document.getElementsByTagName("li");
                for (i = 0; i < li.length; i++) {

                    txtValue=li[i].innerText;
                    
                    if (txtValue.toUpperCase().startsWith(filter) && filter!='') {
        	            li[i].style.display="block";

                    } else {
        	            li[i].style.display="none";
                    }
                }               
            }
